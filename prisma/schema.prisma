generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id          Int       @id @default(autoincrement())
  title       String
  company     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  location    String
  description String
  salary      Int
  type        String
  seniority   String
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Type {
  id    Int    @id @default(autoincrement())
  title String
}

model Range {
  id   Int @id @default(autoincrement())
  from Int
  to   Int
}

model Category {
  id    Int    @id @default(autoincrement())
  title String
  jobs  Job[]
}


