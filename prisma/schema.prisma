// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model jobcard {
  id          Int      @id @default(autoincrement())
  title       String
  company     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  location    String
  description String
  salary      Int
  type        String
  seniority   String
  category    String
}

model type {
  id    Int    @id @default(autoincrement())
  title String
}

model range {
  id   Int @id @default(autoincrement())
  from Int
  to   Int
}

model category {
  id    Int    @id @default(autoincrement())
  title String
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  posts   Post[]
  profile Profile?
}
